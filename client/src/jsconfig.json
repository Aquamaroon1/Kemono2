{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@wp/pages/*": ["./pages/*"],
      "@wp/js/*": ["./js/*"],
      "@wp/css/*": ["./css/*"],
      "@wp/assets/*": ["./assets/*"],
      "@wp/api/*": ["./api/*"],
    },
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  }
}
