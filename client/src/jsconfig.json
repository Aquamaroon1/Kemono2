{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@wp/pages/*": ["./pages/*"],
      "@wp/js/*": ["./js/*"],
      "@wp/css/*": ["./css/*"],
      "@wp/assets/*": ["./assets/*"],
      "@wp/api": ["./api/_index.js"],
    },
    "target": "es6",
    "module": "es6",
    "lib": ["dom", "dom.iterable"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  }
}
